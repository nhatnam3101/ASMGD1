<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/edtTenkh"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtMakh"
        android:hint="Tên Khóa Học"/>
    <LinearLayout
        android:id="@+id/dateSta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTenkh"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/edtStart"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Date start"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btnStart"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chọn"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dateEn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateSta"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/edtEnd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Date start"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btnEnd"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chọn"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/dateEn"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:onClick="checkLogin"
            android:text="Thêm"
            />
        <Button
            android:id="@+id/btnHuy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Huy"/>
    </LinearLayout>
</RelativeLayout>